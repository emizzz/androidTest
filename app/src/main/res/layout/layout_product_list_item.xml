<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_list_item"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_margin_size">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_size_large">

            <ImageView
                android:id="@+id/product_item_image"
                android:layout_width="@dimen/photo_icon_size"
                android:layout_height="@dimen/photo_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@android:drawable/ic_dialog_info"
                />

            <TextView
                android:id="@+id/product_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:paddingLeft="@dimen/margin_padding_size_medium"
                android:paddingTop="@dimen/margin_padding_size_medium"
                android:textSize="@dimen/text_size_large"
                android:layout_toRightOf="@id/product_item_image"/>

            <TextView
                android:id="@+id/product_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_padding_size_medium"
                android:textSize="@dimen/text_size_small"
                android:layout_below="@+id/product_item_name"
                android:layout_toRightOf="@id/product_item_image"/>

            <ImageButton
                android:id="@+id/product_item_icon1"
                android:layout_alignParentRight="true"
                android:tint="@color/colorPrimaryDark"
                android:backgroundTint="@color/white"
                android:layout_width="@dimen/standard_touch_size"
                android:layout_height="@dimen/standard_touch_size"
                android:padding="@dimen/margin_padding_size_small"
                android:src="@drawable/ic_baseline_done_24px"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>