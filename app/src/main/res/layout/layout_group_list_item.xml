<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_list_item"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_margin_size"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_size_large"
            >

            <TextView
                android:text="FAMIGLIA"
                android:layout_centerVertical="true"
                android:padding="@dimen/margin_padding_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_item_name"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/text_size_large"
            />

            <ImageView
                android:layout_alignParentRight="true"
                android:tint="@color/colorPrimary"
                android:id="@+id/group_item_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_padding_size_small"
                android:src="@android:drawable/ic_dialog_info" />

            <ImageView
                android:layout_toLeftOf="@id/group_item_icon1"
                android:tint="@color/colorPrimary"
                android:id="@+id/group_item_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_padding_size_small"
                android:src="@android:drawable/ic_delete" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>